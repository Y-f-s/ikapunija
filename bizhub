    <script>
        // Navbar scroll effect
        window.addEventListener('scroll', function() {
            const nav = document.getElementById('navbar');
            const logoText = document.getElementById('logo-text');
            const navLinks = document.getElementById('nav-links');
            
            if (window.scrollY > 50) {
                nav.classList.add('glass-nav', 'shadow-lg');
                nav.classList.remove('py-4');
                nav.classList.add('py-3');
                logoText.classList.remove('text-white');
                logoText.classList.add('text-blue-900');
                navLinks.classList.remove('text-white');
                navLinks.classList.add('text-slate-600');
            } else {
                nav.classList.remove('glass-nav', 'shadow-lg');
                nav.classList.remove('py-3');
                nav.classList.add('py-4');
                logoText.classList.add('text-white');
                logoText.classList.remove('text-blue-900');
                navLinks.classList.add('text-white');
                navLinks.classList.remove('text-slate-600');
            }
        });
    </script>
